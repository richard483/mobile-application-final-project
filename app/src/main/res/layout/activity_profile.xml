<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/login_fragment_background_style"
    android:padding="24dp">

    <TextView
        android:id="@+id/your_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your profile"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/your_profile_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/yourName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Null"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_name_tv" />

    <TextView
        android:id="@+id/profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/profile_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/yourEmail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Null"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_email_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_email_tv" />

    <Button
        android:id="@+id/profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D6D6"
        android:text="Back"
        android:textColor="#2B2B2B"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@id/yourEmail_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>