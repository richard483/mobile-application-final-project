<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateAccountFragment"
    android:background="@drawable/login_fragment_background_style"
    android:padding="24dp">

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="72sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/signup_name_et"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="#919191"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_edit_text_style"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_tv"
        app:layout_constraintStart_toStartOf="@+id/signup_tv"
        app:layout_constraintEnd_toEndOf="@+id/signup_tv" />

    <EditText
        android:id="@+id/signup_email_et"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:hint="E-mail"
        android:textColor="@color/white"
        android:textColorHint="#919191"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_edit_text_style"
        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
        android:drawablePadding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_et"
        app:layout_constraintStart_toStartOf="@+id/signup_tv"
        app:layout_constraintEnd_toEndOf="@+id/signup_tv" />

    <EditText
        android:id="@+id/signup_password_et"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="#919191"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_edit_text_style"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        android:drawablePadding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_et"
        app:layout_constraintStart_toStartOf="@+id/signup_tv"
        app:layout_constraintEnd_toEndOf="@+id/signup_tv" />

    <EditText
        android:id="@+id/signup_reenter_password_et"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:hint="Re-enter Password"
        android:textColor="@color/white"
        android:textColorHint="#919191"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_edit_text_style"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        android:drawablePadding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_password_et"
        app:layout_constraintStart_toStartOf="@+id/signup_tv"
        app:layout_constraintEnd_toEndOf="@+id/signup_tv" />

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D6D6"
        android:text="create account"
        android:textColor="#2B2B2B"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/signup_reenter_password_et"
        app:layout_constraintStart_toStartOf="@id/signup_tv"
        app:layout_constraintEnd_toEndOf="@id/signup_tv"/>



</androidx.constraintlayout.widget.ConstraintLayout>